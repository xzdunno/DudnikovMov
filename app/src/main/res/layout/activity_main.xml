<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/cust_btn"
            android:text="Следующий"
            android:layout_marginLeft="70dp"
            android:textSize="10dp"
            android:textColor="@color/black"></Button>


        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/vidView"></VideoView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp">
            <ProgressBar
                android:id="@+id/prgDownR"
                android:layout_width="10dp"
                android:layout_height="130dp"
                android:progressDrawable="@drawable/cust_prg_bar_top"
                style="?android:attr/progressBarStyleHorizontal"
                android:visibility="gone">
            </ProgressBar>

            <ProgressBar
                android:id="@+id/prgUpR"
                android:layout_width="10dp"
                android:layout_height="130dp"
                android:progressDrawable="@drawable/cust_prg_bar_bot"
                style="?android:attr/progressBarStyleHorizontal"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/prgDownL"
                android:layout_width="10dp"
                android:layout_height="130dp"
                android:progressDrawable="@drawable/cust_prg_bar_top"
                android:visibility="gone"></ProgressBar>

            <ProgressBar
                android:id="@+id/prgUpL"
                android:layout_width="10dp"
                android:layout_height="130dp"
                android:progressDrawable="@drawable/cust_prg_bar_bot"
                style="?android:attr/progressBarStyleHorizontal"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="7"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            ></TextView>
        <TextView
            android:id="@+id/txtL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="7"
            android:visibility="gone"
            android:layout_marginLeft="50dp"
            ></TextView>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_centerInParent="true"
            android:text=""
            android:visibility="gone"></TextView>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>