<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="100dp" android:bottomLeftRadius="100dp"></corners>
            <solid android:color="#b0bec5"></solid>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="top">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="100dp" android:bottomLeftRadius="100dp"></corners>
                <solid android:color="#ec407a"></solid>
            </shape>
        </clip>
    </item>
</layer-list>